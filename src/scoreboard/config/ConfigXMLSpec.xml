<root>

<!-- Sample TextNode configuration. Possible values for <name> can be:
    <name>homeText</name>
    <name>guesText</name>
    <name>periodText</name>
    <name>shotsOnGoalText/<name>
    <name>homePenaltyText</name>
    <name>guestPenaltyText</name>
-->
    <config>
        <name>homeText</name>
        <layoutY>0.025000</layoutY>
        <layoutXOption>LEFT_JUSTIFY</layoutXOption>
        <alignObject>null</alignObject>
        <fontSize>0.045000</fontSize>
        <content>HOME</content>
    </config>

<!-- Sample ParentWithDigits Node configuration. Possible values for <name>
can be:

    <name>clock</name>
    <name>homeScore</name>
    <name>guestScore</name>
    <name>period</name>
    <name>homeShotsOnGoal</name>
    <name>guestShotsOnGoal</name>
-->

    <config>
        <name>clock</name>
        <layoutY>0.025000</layoutY>
        <layoutXOption>CENTER</layoutXOption>
        <alignObject>null</alignObject>
        <digitHeight>0.200000</digitHeight>
        <overallValue>0</overallValue>
    </config>

<!-- Sample Penalty Node configuration. Superset of ParentWithDigits in that
an additional Property <playerNumberColor> is included.  Possible values for
<name> can be:

    <name>homePenalty1</name>
    <name>guestPenalty1</name>
    <name>homePenalty2</name>
    <name>guestPenalty2</name>
-->

    <config>
        <name>guestPenalty1</name>
        <layoutY>0.505000</layoutY>
        <layoutXOption>RIGHT_JUSTIFY</layoutXOption>
        <alignObject>null</alignObject>
        <digitHeight>0.130000</digitHeight>
        <playerNumber>0</playerNumber>
        <overallValue>0</overallValue>
    </config>

<!-- HockeyScoerboard configuration. Currently only one name:

    <name>hockeyScoreboard</name>
-->

    <config>
        <name>hockeyScoreboard</name>
        <backgroundColor>0</backgroundColor>
    </config>

<!-- Sample ImageView configuration. Currently only one name:

    <name>logoImageView</name>
-->
    <config>
        <name>logoImageView</name>
        <url>logo.png</url>
        <fitWidth>0.405339</fitWidth>
        <fitHeight>0.337998</fitHeight>
        <layoutX>0.385468</layoutX>
        <layoutY>0.580000</layoutY>
    </config>

</root>